<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--Practice and sign-in Screen-->
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical|center_horizontal"
        android:id="@+id/sign_in_screen">

        <Button android:id="@+id/practice_button"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="Practice"
            android:layout_gravity="center_horizontal"
            />

        <!--<Button android:id="@+id/profile"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"
            android:text="Profile Settings"/>-->
        <com.google.android.gms.common.SignInButton android:id="@+id/sign_in_button"
            style="@style/SignInButton" />

    </LinearLayout>

    <!--Multiplayer Screen-->
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/signed_in_screen">


        <TextView
            android:text="Sign-in Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <!--Single-Player options-->
        <TextView
            android:text="Timed-Challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <!--Multi-Player Options-->
        <TextView
            android:text="Quick Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <TextView
            android:text="Invite Players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
        <TextView
            android:text="See Invitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <Button
            android:text="SIGN OUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_out_button" />


    </LinearLayout>

    <!--wait screen-->
    <LinearLayout android:id="@+id/wait_screen" style="@style/LLScreen">
        <TextView style="@style/Blurb" android:text="@string/please_wait" />
    </LinearLayout>
</FrameLayout>